<Application x:Class="Ukagaka.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ukagaka"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="RadioButtonColumnTemplate">
            <RadioButton IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                 GroupName="ShellSelection"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
        </DataTemplate>
    </Application.Resources>
</Application>
